<% if option.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger col-md-9 col-md-offset-2">
      <p>Please correct the following errors:</p>
      <ul>
        <% option.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>