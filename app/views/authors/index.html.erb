<%= render 'shared/navbar', title: 'All Authors' %>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Join Date</th>
    <% if is_admin? %>
      <th>Settings</th>
    <% end %>
  </tr>
  </thead>

  <% @users.each do |u| %>
    <tr>
      <td><%= gravatar_for u %><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.created_at.strftime("%d/%m/%Y") %></td>
      <% if is_admin? %>
        <td>
          <%= link_to edit_author_path(u.id) do %> <%= fa_icon "edit" %> <% end %>
          <%= link_to author_path(u.id), method: :delete, data: {confirm: "You sure?"} do %> <%= fa_icon "trash" %> <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>